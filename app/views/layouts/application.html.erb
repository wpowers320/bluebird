<!DOCTYPE html>
<html>
<head>
  <title>Theatr</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>

<body class="<%= params[:controller].parameterize %>-controller">

  <header>
    <div class='content'>
      <%= render :partial => 'layouts/header' %>
    </div>
  </header>

  <% if params[:controller] == 'root' %>
    <%= yield %>
  <% else %> 
    <div id='main'>
      <div id="left-sidebar">
        <%= render(:partial => 'layouts/left_sidebar') %>
      </div>
      <div id='middle'>
        <%= yield %>
      </div>
      <% unless ['/static', '/users'].any? {|path| fullpath.start_with?(path)} || fullpath == '/' %>
      <div id="right-sidebar">
        <%= render(:partial => '/layouts/right_sidebar') %>
      </div>
      <% end %>
    </div>
  <% end %>

  <footer>
    <div class='content'>
      <%= render :partial => 'layouts/footer' %>
    </div>
  </footer>

</body>
</html>
