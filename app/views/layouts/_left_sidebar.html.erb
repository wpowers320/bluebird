<% if user_signed_in? %>
  <%
    if params[:controller] == 'home'
      active_tab = 'home' 
    end
  -%>
  
  <%
    if params[:controller] == 'video'
      active_tab = 'movie' 
    end
  -%>

  <%
    if params[:controller] == 'payments'
      active_tab = 'payments' 
    end
  -%>
<nav>
  <ul class='categories'>  
    <li>
      <% class_names = active_tab == 'home' ? 'home active' : 'home' %>
      <%= link_to 'Home', home_path, :class => class_names or 'home' %>
    </li>
    <li>
      <% class_names = active_tab == 'movie' ? 'movie active' : 'movie' %>
      <%= link_to 'Movie', videos_path, :class => class_names or 'movie' %>  
    </li>
    <li>
      <% class_names = active_tab == 'payments' ? 'payments active' : 'payments' %>
      <%= link_to 'Payments', payments_path, :class => class_names or 'payments' %> 
    </li>
  </ul>
</nav>

<% end %>
