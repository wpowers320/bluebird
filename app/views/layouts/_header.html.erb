<div class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <div class="navbar-header"> 
      <!-- .btn-navbar is used as the toggle for collapsed navbar content -->
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <!-- Be sure to leave the brand out there if you want it shown -->
      <% if user_signed_in? %>
        <%= link_to "bluebird", home_path, :class => "navbar-brand" %>
      <% else %>
        <%= link_to "bluebird", root_path, :class => "navbar-brand" %> 
      <% end %>
    </div>
      <!-- Everything you want hidden at 940px or less, place within here -->
      <div class="collapse navbar-collapse">
        <% if user_signed_in? %>
          <div class="col-md-offset-3">
            <ul class ="nav navbar-nav">
              <li><a href="#">Technology</a></li>
              <li><a href="#">Business</a></li>
              <li><a href="#">Music</a></li>
              <li><a href="#">Local</a></li>
              <li><a href="#">International</a></li>
            </ul>
          </div>
          <ul class="nav navbar-nav pull-right">
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                Sign Out 
                <b class="caret"></b>
              </a>
              <ul class="dropdown-menu pull-right">
                <li><a href="#">Settings</a></li>
                <li><a href="#">FAQ</a></li>
                <li><a href="#">About</a></li>
                <li class="divider"></li>
                <li><%= link_to 'Sign Out', destroy_user_session_path, :method => :delete %> </li>
              </ul>
            </li>
          </ul>
        <% elsif params[:controller] == "root" %>
          <ul>
            <li>
            </li>
          </ul>
        <% else %>
          <ul class="nav pull-right">
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                Sign In
                <b class="caret"></b>
              </a>         
              <ul class="dropdown-menu sign-in">
                <%= form_for(:user, :url => registration_path(:user)) do |f| %>
                  <div class='form-signin'>
                    <%= f.email_field :email, :placeholder => "Email Address", :class => "input-block-level" %>
                    <%= f.password_field :password, :placeholder => "Password", :class => "input-block-level" %>      
                    <%= f.submit 'Sign In', :class => "submit btn btn-medium btn-primary" %>
                    <%= link_to "Forgot your password?", new_password_path(:user), :class => "pull-right forgot-pswd" %>
                  </div>
                <% end %>
              </ul>
            </li>
          </ul>
        <% end %>
      </div>
 
    </div>
</div>


